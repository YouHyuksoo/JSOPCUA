{
  "name": "jsscada-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:monitor": "npm run dev --workspace=apps/monitor",
    "dev": "concurrently \"npm run dev:admin\" \"npm run dev:monitor\"",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:monitor": "npm run build --workspace=apps/monitor",
    "build": "npm run build:admin && npm run build:monitor",
    "start:admin": "npm run start --workspace=apps/admin",
    "start:monitor": "npm run start --workspace=apps/monitor",
    "start": "concurrently \"npm run start:admin\" \"npm run start:monitor\"",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@next/swc-win32-x64-msvc": "^14.2.33",
    "concurrently": "^8.2.2",
    "lightningcss": "^1.30.2",
    "typescript": "^5.3.0"
  }
}
