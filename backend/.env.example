# JSScada Backend Environment Variables

# Database Configuration
SQLITE_DB_PATH=./config/scada.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/scada.log

# PLC Connection Settings (향후 Feature 2에서 사용)
# PLC_CONNECTION_TIMEOUT=5
# PLC_CONNECTION_POOL_SIZE=5

# Oracle DB Settings (향후 Feature 4에서 사용)
# ORACLE_HOST=localhost
# ORACLE_PORT=1521
# ORACLE_SERVICE_NAME=ORCL
# ORACLE_USER=scada_user
# ORACLE_PASSWORD=scada_password

# API Settings (향후 Feature 5에서 사용)
# API_HOST=0.0.0.0
# API_PORT=8000
# WEBSOCKET_PORT=8001
