# JSScada Backend Environment Configuration

# Database
DATABASE_PATH=backend/data/scada.db

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_COLORS=true
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Polling Engine
MAX_POLLING_GROUPS=10
DATA_QUEUE_SIZE=10000
WEBSOCKET_BROADCAST_INTERVAL=1.0

# PLC Connection Pool (from Feature 2)
POOL_SIZE_PER_PLC=5
CONNECTION_TIMEOUT=5
READ_TIMEOUT=3
IDLE_TIMEOUT=600
# Oracle Database (Feature 4)
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=ORCL
ORACLE_USERNAME=scada_user
ORACLE_PASSWORD=scada_password
ORACLE_POOL_MIN=2
ORACLE_POOL_MAX=5

# Buffer Configuration (Feature 4)
BUFFER_MAX_SIZE=100000
BUFFER_BATCH_SIZE=500
BUFFER_BATCH_SIZE_MAX=1000
BUFFER_WRITE_INTERVAL=1.0
BUFFER_RETRY_COUNT=3
BACKUP_FILE_PATH=backend/backup
